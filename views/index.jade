extends layout

block content
  div.container(ng-app='toDOApp', ,='', ng-controller='ToDOCtrl')
    form(ng-submit='toDoSubmit()')
      input(type='text', ng-model='toDoText')
      h3(hello-world)
      ul.todo-list
        li( ng-repeat='rec in todoRecs', ng-click='todoClick($index)', ng-class="{ 'done' : rec.done }" )
           div(id="{{ rec._id }}",rec-world, recDone="rec.done"){{rec.name}}